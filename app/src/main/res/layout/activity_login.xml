<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/material_dynamic_tertiary20"
    android:padding="10dp"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_corner_radius="45dp"
        android:layout_gravity="end"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/btn_music"/>
    <TextView
        android:id="@+id/text_dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đăng Nhập"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_tendangnnhap"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:hint="Tên đăng nhập"
            android:inputType="text"
            android:textSize="25sp"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_matkhaudk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="Đăng nhập"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="Đăng ký"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLoginGG"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_login"
        android:drawableLeft="@drawable/ic_baseline_account_box_24"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:text="Đăng nhap gg"/>


</LinearLayout>