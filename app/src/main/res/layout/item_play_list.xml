<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPlayListIndex"
            android:textSize="17sp"
            android:ems="1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1" />
        <TextView
            android:id="@+id/tvPlayListNameSong"
            android:layout_toRightOf="@id/tvPlayListIndex"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ten Bai Hat" />
        <TextView
            android:id="@+id/tvPlayListNameSinger"
            android:layout_toRightOf="@id/tvPlayListIndex"
            android:layout_below="@id/tvPlayListNameSong"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ten ca si" />


    </RelativeLayout>
</RelativeLayout>